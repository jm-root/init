{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "npx jm-server",
    "cluster": "npx jm-server --cluster",
    "lint": "standard",
    "lint:fix": "standard --fix"
  },
  "lint-staged": {
    "**/*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "dependencies": {
    "bson": "^4.0.2",
    "compare-versions": "^3.5.1",
    "config": "^3.1.0",
    "jm-ms-wrapper": "^1.0.1",
    "jm-server": "^2.0.6"
  },
  "devDependencies": {
    "husky": "^1.2.0",
    "jest": "^23.1.0",
    "lint-staged": "^8.1.0",
    "standard": "^12.0.1"
  }
}
